[Unit]
Description=E-ink Board Custom Restart Handler
DefaultDependencies=no
Before=systemd-reboot.service systemd-shutdown.service
Conflicts=rescue.service rescue.target
After=shutdown.target

[Service]
Type=oneshot
ExecStart=/usr/bin/eink-restart.sh
TimeoutStartSec=30
RemainAfterExit=yes

[Install]
WantedBy=reboot.target
