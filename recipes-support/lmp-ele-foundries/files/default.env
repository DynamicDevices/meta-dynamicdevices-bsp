# EdgeLock Enclave (ELE) Foundries.io LMP Configuration
# Configure these values for your specific Foundries.io factory

# Factory Configuration
REPOID="your-factory-name"
FACTORY_CA_PATH="/usr/share/lmp-ele-foundries/root.crt"

# Device Configuration
DAEMON_INTERVAL="300"
SOTA_DIR="/var/sota"
PACMAN_TYPE="ostree+compose_apps"

# Security Configuration
ELE_DEVICE_KEY_ID="foundries_device_key"
ELE_DEVICE_CERT_ID="foundries_device_cert"

# Logging Configuration
LOG_LEVEL="INFO"

# Network Configuration
CONNECT_TIMEOUT="30"
REQUEST_TIMEOUT="60"

# Development/Debug Options (set to "1" to enable)
DEBUG_MODE="0"
SKIP_CERT_VERIFY="0"
FORCE_REREGISTRATION="0"

# Factory-specific Tags (comma-separated)
DEVICE_TAGS="eink,imx93,production"
